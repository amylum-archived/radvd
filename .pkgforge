name 'radvd'
org 'amylum'

licenses 'COPYRIGHT'

deps(
  'linux-api-headers': {
    version: '4.14-1',
    checksum: '106c40ebd4826cf8fda5235cb9619e37d79efea6e64545d64bb78d4a829f29a6'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-pidfile': '/run/radvd.pid'
)

patch 'if_arp.patch'

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

