name 'radvd'
org 'amylum'

licenses 'COPYRIGHT'

deps(
  'linux-api-headers': {
    version: '4.12-1',
    checksum: '25d3672456a93cc7f6743d4b2c227ad7a9456f4ec2a9f09ab7f2e9e6cb56aeaa'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-pidfile': '/run/radvd.pid'
)

patch 'if_arp.patch'

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

