name 'radvd'
org 'amylum'

licenses 'COPYRIGHT'

deps(
  'linux-api-headers': {
    version: '4.16-1',
    checksum: '55af258de8663de5ec97db875651eaeecc209b47454dbbf27757d4de595e618d'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-pidfile': '/run/radvd.pid'
)

patch 'if_arp.patch'

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

