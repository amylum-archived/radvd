name 'radvd'
org 'amylum'

licenses 'COPYRIGHT'

deps(
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-pidfile': '/run/radvd.pid'
)

patch 'if_arp.patch'

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

