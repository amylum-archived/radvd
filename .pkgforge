name 'radvd'
org 'amylum'

licenses 'COPYRIGHT'

deps(
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

configure_flags(
  prefix: '/usr',
  sbindir: '/usr/bin',
  sysconfdir: '/etc',
  'with-pidfile': '/run/radvd.pid'
)

patch 'if_arp.patch'

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

